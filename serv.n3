@prefix : <http://bigasterisk.com/ns/serv#> .
@prefix auth: <http://bigasterisk.com/ns/serv/auth#> .
@prefix serv: <http://bigasterisk.com/services/> .


serv:magma_image a :DockerImage;
      :dockerFile "Dockerfile";
      :internalPort 8010
.

serv:magma a :Service;
      :image serv:magma_image;
      :path "/magma/";
      :openid auth:admin;
      :serverHost "bang";
      :port 8010;
      :prodDockerFlags (
      );
      :localRunDockerFlags (
        "-v" "`pwd`:/opt"
      );
      :localRunCmdline (
        "python3" "serve_magma.py" "-v"
      );
.

