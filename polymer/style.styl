html
  height: 100%
  
body
  margin: 0
  height: 100%
  display: -webkit-flex
  display: flex
  -webkit-flex-flow: row
  flex-flow: row
  -webkit-align-items: stretch
  align-items: stretch
  .col
    border: 3px solid black
    -webkit-flex: 1 0 1%
    flex: 1 0 1%
    -webkit-flex-grow: 1
    flex-grow: 1
    display: -webkit-flex
    display: flex
    -webkit-flex-flow: column
    flex-flow: column
   
    .cell
      -webkit-flex: 1 0 1%
      flex: 1 0 1%
      position: relative
      background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.39) 100%);

body
  font-family: sans
  font-size: 10pt