html
  height: 100%
  
body
  margin: 0
  height: 100%
  display: -webkit-flex
  display: flex
  -webkit-flex-flow: row
  flex-flow: row
  -webkit-align-items: stretch
  align-items: stretch
  .col
    -webkit-flex: 1 0 1%
    flex: 1 0 1%
    -webkit-flex-grow: 1
    flex-grow: 1
    display: -webkit-flex
    display: flex
    -webkit-flex-flow: column
    flex-flow: column
   
    .cell
      -webkit-flex: 1 0 1%
      flex: 1 0 1%
      position: relative

// --- only page layout above this line -----------------------

body
  font-family: sans
  font-size: 10pt
  background: #cecece

.cell
  background: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.39) 100%);
  margin: 4px;
  border: 1px outset gray;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 1px 1px 8px rgba(39, 37, 104, 0.68);

.otherPage
  display: inline-block;
  padding: 0.2cm;
  background: rgba(255, 255, 255, 0.28);
  margin: 3px;
  border: 2px outset rgba(165, 165, 165, 0.61);
  border-radius: 6px;

.crammedFrame
  display: flex
  flex-direction: column
  > div
    flex: 0 0 auto
  > iframe
    background: white