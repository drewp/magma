link(rel="import", href="/lib/polymer/0.2.2/polymer.html")
link(rel="import", href="magma-refreshing-widget.html")

polymer-element(name="magma-plot", extends="magma-refreshing-widget")
  style.
    #top {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    magma-plot #top {
      background: linear-gradient(to bottom, rgba(71, 71, 71, 1) 0%, rgba(109, 109, 109, 1) 30%, rgba(71, 71, 71, 1) 60%, rgba(32, 32, 32, 1) 100%);
    }
  template
    #top
      img.graphite(src="//graphite.bigasterisk.com/render/?width={{imgWidth}}&height={{imgHeight}}&bgcolor=00000000&_salt={{salt}}&{{params}}")
  script(src="magma-plot.js")
  
