link(rel="import", href="/lib/polymer/1.0.9/polymer/polymer.html")
link(rel="import", href="magma.html")

dom-module(id="magma-plot")
  template
    link(rel="stylesheet", href="magma-refreshing-widget.css")
    style.
      #top {
        background: linear-gradient(to bottom, rgb(47, 47, 47) 0%, rgb(0, 0, 0) 16%, rgb(0, 0, 0) 63%, rgb(25, 24, 24) 90%);
      }
      #title {
        font-size: 10px;
        color: white;
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
      }
      .jumbo {
        height: 1000px !important;
        width: 1000px !important;
        position: fixed !important;
        left: 0;
        top: 0;
        z-index: 1;
      }
    #top
      img.graphite(src="//graphite.bigasterisk.com/render/?width={{imgWidth}}&height={{imgHeight}}&bgcolor=00000000&_salt={{salt}}&{{params}}")
      div#title [[title]]
  script(src="magma-plot.js")
  
